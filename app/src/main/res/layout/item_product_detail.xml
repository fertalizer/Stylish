        android:textAlignment="center"
        android:textColor="#646464"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_product_detail_stock_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_detail_stock_title"
        tools:text="材質" />

    <TextView
        android:id="@+id/tv_product_detail_wash_title"
        android:layout_width="wrap_content"
