        app:layout_constraintTop_toBottomOf="@+id/tv_product_detail_color_title"
        tools:text="尺寸" />

    <TextView
        android:id="@+id/tv_product_detail_stock_title"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:letterSpacing="0.15"
        android:text="@string/productDetailStock"
        android:textAlignment="center"
        android:textColor="#646464"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_product_detail_size_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_detail_size_title"
