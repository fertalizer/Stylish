        android:id="@+id/iv_product_detail_material_rectangular"
        android:layout_width="1dp"
        android:layout_height="14dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#CCCCCC"
        app:layout_constraintBottom_toBottomOf="@+id/tv_product_detail_material_title"
        app:layout_constraintStart_toEndOf="@+id/tv_product_detail_material_title"
        app:layout_constraintTop_toTopOf="@+id/tv_product_detail_material_title" />

    <ImageView
        android:id="@+id/iv_product_detail_wash_rectangular"
        android:layout_width="1dp"
        android:layout_height="14dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#CCCCCC"
        app:layout_constraintBottom_toBottomOf="@+id/tv_product_detail_wash_title"
