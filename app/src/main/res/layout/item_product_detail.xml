    <TextView
        android:id="@+id/tv_product_detail_stock_text"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:letterSpacing="0.15"
        android:textColor="#3f3a3a"
