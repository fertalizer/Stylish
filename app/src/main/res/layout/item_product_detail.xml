    <TextView
        android:id="@+id/tv_product_detail_size_text"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:letterSpacing="0.15"
        android:textColor="#3f3a3a"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_product_detail_size_title"
        app:layout_constraintStart_toEndOf="@+id/iv_product_detail_size_rectangular"
        app:layout_constraintTop_toTopOf="@+id/tv_product_detail_size_title"
