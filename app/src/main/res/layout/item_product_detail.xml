<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_product_detail_note_text"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:letterSpacing="0.15"
        android:textColor="#3f3a3a"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_product_detail_note_title"
        app:layout_constraintStart_toEndOf="@+id/iv_product_detail_note_rectangular"
        app:layout_constraintTop_toTopOf="@+id/tv_product_detail_note_title"
        tools:text="Note" />

    <TextView
        android:id="@+id/tv_product_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:letterSpacing="0.15"
        android:textAlignment="center"
        android:textColor="#3f3a3a"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_product_detail_gallery"
        tools:text="厚實毛呢格子外套" />

    <TextView
        android:id="@+id/tv_product_detail_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="254dp"
        android:layout_marginTop="24dp"
        android:gravity="end"
        android:letterSpacing="0.15"
        android:textAlignment="center"
        android:textColor="#3f3a3a"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_product_detail_story"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_product_detail_gallery"
        tools:text="NT$2140  " />

    <TextView
        android:id="@+id/tv_product_detail_id"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:letterSpacing="0.15"
        android:textAlignment="center"
        android:textColor="#888888"
        app:layout_constraintStart_toStartOf="@+id/tv_product_detail_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_detail_title"
        tools:text="WS18479127" />

    <TextView
        android:id="@+id/tv_product_detail_story"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:letterSpacing="0.15"
        android:lineSpacingExtra="12sp"
        android:textColor="#646464"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_product_detail_id"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_detail_id"
        tools:text="採用高級100%棉質素材的外套。輕盈保暖高質感的針織大衣！精緻做工升級，展現高質感氛圍。" />

    <TextView
        android:id="@+id/tv_product_detail_color_title"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:letterSpacing="0.15"
        android:text="@string/productDetailColor"
        android:textAlignment="center"
        android:textColor="#646464"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_product_detail_story"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_detail_story"
        tools:text="顏色" />

    <TextView
        android:id="@+id/tv_product_detail_size_title"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
