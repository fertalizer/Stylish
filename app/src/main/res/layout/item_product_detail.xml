        android:letterSpacing="0.15"
        android:textColor="#3f3a3a"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_product_detail_material_title"
        app:layout_constraintStart_toEndOf="@+id/iv_product_detail_material_rectangular"
        app:layout_constraintTop_toTopOf="@+id/tv_product_detail_material_title"
