        android:textAlignment="center"
        android:textColor="#646464"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_product_detail_material_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_detail_material_title"
        tools:text="洗滌" />

    <TextView
        android:id="@+id/tv_product_detail_place_title"
