    <TextView
        android:id="@+id/tv_product_detail_note_title"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:letterSpacing="0.15"
        android:text="@string/productDetailNote"
        android:textAlignment="center"
        android:textColor="#646464"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_product_detail_place_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_detail_place_title"
        tools:text="備註" />

    <ImageView
        android:id="@+id/iv_product_detail_color_rectangular"
        android:layout_width="1dp"
        android:layout_height="14dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#CCCCCC"
        app:layout_constraintBottom_toBottomOf="@+id/tv_product_detail_color_title"
        app:layout_constraintStart_toEndOf="@+id/tv_product_detail_color_title"
        app:layout_constraintTop_toTopOf="@+id/tv_product_detail_color_title" />

    <ImageView
        android:id="@+id/iv_product_detail_size_rectangular"
        android:layout_width="1dp"
        android:layout_height="14dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#CCCCCC"
        app:layout_constraintBottom_toBottomOf="@+id/tv_product_detail_size_title"
        app:layout_constraintStart_toEndOf="@+id/tv_product_detail_size_title"
        app:layout_constraintTop_toTopOf="@+id/tv_product_detail_size_title" />

    <ImageView
        android:id="@+id/iv_product_detail_stock_rectangular"
        android:layout_width="1dp"
        android:layout_height="14dp"
        android:layout_marginStart="13dp"
