<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_dialog_product_color"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_dialog_product_color_select"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/dialog_detail_color_stoke"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/iv_dialog_product_color"
        app:layout_constraintEnd_toEndOf="@+id/iv_dialog_product_color"
        app:layout_constraintStart_toStartOf="@+id/iv_dialog_product_color"
        app:layout_constraintTop_toTopOf="@+id/iv_dialog_product_color" />
</android.support.constraint.ConstraintLayout>