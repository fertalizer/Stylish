<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_home_list1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_home_list_image2"
        android:layout_width="0dp"
        android:layout_height="162dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="182dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/image_placeholder" />

    <ImageView
        android:id="@+id/iv_home_list_image3"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="100dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_home_list_image2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/image_placeholder" />

    <ImageView
        android:id="@+id/iv_home_list_image4"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="100dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_home_list_image2"
        app:layout_constraintTop_toBottomOf="@+id/iv_home_list_image3"
        app:srcCompat="@mipmap/image_placeholder" />

    <ImageView
        android:id="@+id/iv_home_list_image5"
        android:layout_width="0dp"
        android:layout_height="162dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="16dp"
        android:accessibilityHeading="false"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_home_list_image4"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/image_placeholder" />

    <TextView
        android:id="@+id/tv_home_list_title2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        android:textColor="#3a3f3f"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_home_list_image2"
        tools:text="TextView" />

    <TextView
        android:id="@+id/tv_home_list_detail2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:text="TextView"
        android:textColor="#646464"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_list_title2" />

</android.support.constraint.ConstraintLayout>