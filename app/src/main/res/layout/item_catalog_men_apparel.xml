<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_catalog_men_apparel_picture"
        android:layout_width="156dp"
        android:layout_height="220dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:background="#ebebeb"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_placeholder" />

    <TextView
        android:id="@+id/tv_catalog_men_apparel_title"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginTop="12dp"
        android:text="TextView1"
        android:textColor="#3f3a3a"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/iv_catalog_men_apparel_picture"
        app:layout_constraintTop_toBottomOf="@+id/iv_catalog_men_apparel_picture" />

    <TextView
        android:id="@+id/tv_catalog_men_apparel_price"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginTop="8dp"
        android:text="TextView2"
        android:textColor="#3f3a3a"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/iv_catalog_men_apparel_picture"
        app:layout_constraintTop_toBottomOf="@+id/tv_catalog_men_apparel_title" />
</android.support.constraint.ConstraintLayout>